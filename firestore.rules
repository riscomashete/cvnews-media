
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // USERS COLLECTION
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // ARTICLES COLLECTION
    match /articles/{articleId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // SUBSCRIBERS (Newsletter)
    match /subscribers/{id} {
      allow create: if true; // Public can subscribe
      allow read: if request.auth != null; // Only staff can view list
    }

    // CONTACT MESSAGES
    match /messages/{id} {
      allow create: if true; // Public can send messages
      allow read: if request.auth != null; // Only staff can read messages
      allow delete: if request.auth != null; // Allow staff to delete
    }

    // ADVERTISEMENTS
    match /advertisements/{id} {
      allow read: if true; // Public can see ads
      allow write: if request.auth != null; // Only staff can manage ads
    }

    // BUSINESS DIRECTORY
    match /businesses/{id} {
      allow read: if true; // Public can see directory
      allow write: if request.auth != null; // Only staff can manage directory
    }

    // EVENTS
    match /events/{id} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // COMMENTS
    match /comments/{id} {
      allow read: if true;
      allow create: if true; // Public can comment
      allow delete: if request.auth != null; // Admins can moderate
    }
  }
}
