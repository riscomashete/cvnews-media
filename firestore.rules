rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // USERS COLLECTION
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // ARTICLES COLLECTION
    match /articles/{articleId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // SUBSCRIBERS (Newsletter)
    match /subscribers/{id} {
      allow create: if true; // Public can subscribe
      allow read: if request.auth != null; // Only staff can view list
    }

    // CONTACT MESSAGES
    match /messages/{id} {
      allow create: if true; // Public can send messages
      allow read: if request.auth != null; // Only staff can read messages
    }
  }
}