
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // USERS COLLECTION
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // ARTICLES COLLECTION
    match /articles/{articleId} {
      allow read: if true;
      
      // Allow staff to create/delete
      allow create, delete: if request.auth != null;
      
      // Allow staff to update ANYTHING, but allow public to update ONLY 'views'
      allow update: if request.auth != null || 
                    (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['views']));
    }

    // SUBSCRIBERS (Newsletter)
    match /subscribers/{id} {
      allow create: if true; 
      allow read: if request.auth != null; 
    }

    // CONTACT MESSAGES
    match /messages/{messageId} {
      // Public can send messages
      allow create: if true;
      // Staff can read, delete, and update
      allow read, update, delete: if request.auth != null; 
    }

    // ADVERTISEMENTS
    match /advertisements/{id} {
      allow read: if true; 
      allow write: if request.auth != null; 
    }

    // BUSINESS DIRECTORY
    match /businesses/{id} {
      allow read: if true; 
      allow write: if request.auth != null; 
    }

    // EVENTS
    match /events/{id} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // COMMENTS
    match /comments/{commentId} {
      // Public can read and post comments
      allow read: if true;
      allow create: if true;
      // Staff can delete or update (for replies/moderation)
      allow update, delete: if request.auth != null; 
    }
  }
}
